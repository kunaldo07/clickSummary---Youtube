{
  "manifest_version": 3,
  "name": "ClickSummary: AI YouTube Summarizer",
  "version": "1.1.0",
  "description": "Summarize YouTube videos instantly with AI. Get transcripts, key insights, and highlights in one click.",
  "author": "ClickSummary Team",
  "homepage_url": "https://www.clicksummary.com",
  "privacy_policy": "https://www.clicksummary.com/privacy",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.openai.com/*",
    "http://localhost:3001/*",
    "http://localhost:3002/*",
    "https://api.clicksummary.com/*",
    "https://www.clicksummary.com/*",
    "https://clicksummary.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles-exact.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://localhost:3002/*",
        "https://www.clicksummary.com/*",
        "https://clicksummary.com/*"
      ],
      "js": ["auth-bridge.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "ClickSummary: AI YouTube Summarizer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  }
}

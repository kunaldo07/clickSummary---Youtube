{
  "manifest_version": 3,
  "name": "ClickSummary",
  "version": "1.0.0",
  "description": "Get instant AI-powered summaries of any YouTube video. Save time and learn faster with one click.",
  "homepage_url": "https://www.clicksummary.com",
  "privacy_policy": "https://www.clicksummary.com/privacy",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.openai.com/*",
    "http://localhost:3001/*",
    "http://localhost:3002/*",
    "https://api.clicksummary.com/*",
    "https://www.clicksummary.com/*",
    "https://clicksummary.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles-exact.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://localhost:3002/*",
        "https://www.clicksummary.com/*",
        "https://clicksummary.com/*"
      ],
      "js": ["auth-bridge.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "ClickSummary - Ready to use!",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["auth-bridge.html"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
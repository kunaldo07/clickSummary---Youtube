{
  "manifest_version": 3,
  "name": "ClickSummary: AI YouTube Summarizer",
  "version": "1.6.5",
  "description": "Summarize YouTube videos instantly with AI. Get transcripts, key insights, and highlights in one click.",
  "author": "ClickSummary Team",
  "homepage_url": "https://www.clicksummary.com",
  "privacy_policy": "https://www.clicksummary.com/privacy",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "identity"
  ],
  "oauth2": {
    "client_id": "837073239595-d82jmt90dcg6pg1suilajc7rl2auf2b8.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.clicksummary.com/*",
    "https://www.clicksummary.com/*",
    "https://clicksummary.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles-exact.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "ClickSummary: AI YouTube Summarizer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png", 
    "128": "icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3002/*",
      "https://www.clicksummary.com/*",
      "https://clicksummary.com/*"
    ]
  }
}
